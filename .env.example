# Environment Configuration Example
# Copy this to .env.local and fill in your actual values

# Development Environment
NODE_ENV=development

# Google Gemini API Key (get from https://aistudio.google.com/apikey)
VITE_GEMINI_API_KEY=your_actual_gemini_api_key_here

# API Endpoint (local development)
VITE_API_ENDPOINT=http://localhost:8888/.netlify/functions/analyze

# Enable features
VITE_ENABLE_LOCAL_STORAGE=true
VITE_ENABLE_BACKUP=true

# Allowed origins for CORS (for backend proxy)
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8888

# For production, set:
# VITE_API_ENDPOINT=https://yourdomain.com/.netlify/functions/analyze
# VITE_ALLOWED_ORIGINS=https://yourdomain.com
